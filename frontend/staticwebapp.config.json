{
  "auth": {
    "identityProviders": {
      "azureActiveDirectory": {
        "registration": {}  
      }
    },
    "rolesSource": {
      "apiUrl": "/api/getRolesForUser"
    }
  },
  "routes": [
    {
      "route": "/.auth/*",
      "allowedRoles": ["anonymous", "authenticated"]
    },
    {
      "route": "/signed-out",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/*",
      "allowedRoles": ["authenticated"]
    }
  ],
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": ["/.auth/*"]
  }
}
